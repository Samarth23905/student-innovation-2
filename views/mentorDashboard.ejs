<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Mentor Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-gray-900 text-gray-100 min-h-screen font-sans">
    <div class="max-w-7xl mx-auto p-6">
        <!-- Tabs -->
        <div class="flex space-x-4 mb-6">
            <button class="tab-btn px-4 py-2 bg-blue-600 rounded hover:bg-blue-700 focus:outline-none" data-target="mentorsSection">Students</button>
            <button class="tab-btn px-4 py-2 bg-gray-700 rounded hover:bg-gray-600 focus:outline-none" data-target="festsSection">College Fests</button>
        </div>

        <!-- Students Section -->
        <div id="mentorsSection" class="section block space-y-6">
                <!-- AI Predicted Students Section -->
                <div class="mb-8">
                    <h2 class="text-xl font-bold mb-2 text-green-400">AI Predicted Top Students</h2>
                    <div id="aiPredictedStudents" class="bg-gray-800 rounded p-4">
                        <em>Loading predictions...</em>
                    </div>
                </div>
            <!-- Mentee Progress Section -->
            <div class="mb-8">
                <h2 class="text-xl font-bold mb-2">Top Mentees by Assignments Completed</h2>
                <% if (menteeProgress && menteeProgress.length > 0) { %>
                    <div class="overflow-x-auto bg-gray-800 rounded">
                        <table class="min-w-full table-auto divide-y divide-gray-700 text-sm">
                            <thead class="bg-gray-700">
                                <tr>
                                    <th class="px-4 py-2 text-left">Name</th>
                                    <th class="px-4 py-2 text-left">Email</th>
                                    <th class="px-4 py-2 text-left">Assignments Done</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-700">
                                <% menteeProgress.forEach(stud => { %>
                                    <tr>
                                        <td class="px-4 py-2 flex items-center gap-2">
                                            <img src="/<%= stud.profile_pic || 'uploads/default.jpg' %>" alt="Profile" class="w-8 h-8 rounded-full object-cover" />
                                            <%= stud.fullName %>
                                        </td>
                                        <td class="px-4 py-2"><%= stud.email %></td>
                                        <td class="px-4 py-2 font-bold"><%= stud.assignmentCount %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <p class="text-gray-400">No mentees or assignments found.</p>
                <% } %>
            </div>
            <% if (mentorProfilePic && mentorName) { %>
                <div class="flex items-center space-x-4 mb-4 bg-gray-800 p-4 rounded-lg">
                    <img src="/<%= mentorProfilePic %>" alt="Mentor Profile" class="w-16 h-16 rounded-full border-2 border-blue-600" />
                    <span class="text-xl font-semibold"><%= mentorName %></span>
                </div>
            <% } %>

            <div class="flex space-x-4 mb-6">
                <button onclick="window.location.href='/viewMentees?mentorId=<%= mentorId %>'" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 rounded text-white">View My Mentees</button>
                <button id="assignWorkBtn" class="px-4 py-2 bg-green-600 hover:bg-green-700 rounded text-white">Assign Work & Resources</button>
            </div>

            <!-- Modal -->
            <div id="assignModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
                <div class="bg-gray-800 p-6 rounded-lg w-full max-w-2xl max-h-[90vh] overflow-y-auto relative">
                    <button onclick="document.getElementById('assignModal').classList.add('hidden')" class="absolute top-2 right-2 text-xl hover:text-red-500">&times;</button>
                    <h2 class="text-xl font-bold mb-4">Assign Work</h2>
                    <form method="POST" action="/assignAssignment" enctype="multipart/form-data" class="space-y-4 mb-8">
                        <input type="hidden" name="mentorId" value="<%= mentorId %>">
                        <select name="studentId" required class="w-full p-2 rounded bg-gray-700 border border-gray-600">
                            <option value="">Select Mentee</option>
                            <% if (menteeProgress && menteeProgress.length > 0) { %>
                                <% menteeProgress.forEach(stud => { %>
                                    <option value="<%= stud.id %>"><%= stud.fullName %> (<%= stud.email %>)</option>
                                <% }) %>
                            <% } else { %>
                                <option disabled>No mentees found</option>
                            <% } %>
                        </select>
                        <input type="text" name="title" placeholder="Assignment Title" required class="w-full p-2 rounded bg-gray-700 border border-gray-600">
                        <input type="text" name="description" placeholder="Description (optional)" class="w-full p-2 rounded bg-gray-700 border border-gray-600">
                        <input type="file" name="assignmentFile" accept=".pdf,.doc,.docx,.ppt,.pptx,.txt,.zip,.rar,.png,.jpg,.jpeg" required class="w-full p-2 rounded bg-gray-700 border border-gray-600">
                        <button type="submit" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 rounded text-white">Assign</button>
                    </form>

                    <h2 class="text-xl font-bold mb-4">Upload Study Resource</h2>
                    <form method="POST" action="/uploadResource" enctype="multipart/form-data" class="space-y-4 mb-4">
                        <input type="hidden" name="mentorId" value="<%= mentorId %>">
                        <select name="studentId" required class="w-full p-2 rounded bg-gray-700 border border-gray-600">
                            <option value="">Select Mentee</option>
                            <% if (menteeProgress && menteeProgress.length > 0) { %>
                                <% menteeProgress.forEach(stud => { %>
                                    <option value="<%= stud.id %>"><%= stud.fullName %> (<%= stud.email %>)</option>
                                <% }) %>
                            <% } else { %>
                                <option disabled>No mentees found</option>
                            <% } %>
                        </select>
                        <input type="text" name="title" placeholder="Resource Title" required class="w-full p-2 rounded bg-gray-700 border border-gray-600">
                        <input type="text" name="description" placeholder="Description (optional)" class="w-full p-2 rounded bg-gray-700 border border-gray-600">
                        <input type="file" name="resourceFile" accept=".pdf,.doc,.docx,.ppt,.pptx,.txt,.zip,.rar,.png,.jpg,.jpeg" required class="w-full p-2 rounded bg-gray-700 border border-gray-600">
                        <button type="submit" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 rounded text-white">Upload</button>
                    </form>
                </div>
            </div>

            <h2 class="text-xl font-bold mb-2">Track Student Progress</h2>
            <div class="mb-6">
                <label for="progressStudentSelect" class="block mb-2 font-semibold">Select Mentee:</label>
                <select id="progressStudentSelect" class="w-full p-2 rounded bg-gray-700 border border-gray-600 text-white">
                    <option value="">Choose a student</option>
                    <% if (students && students.length > 0) { %>
                        <% students.forEach(stud => { %>
                            <option value="<%= stud.id %>"><%= stud.fullName %> (<%= stud.email %>)</option>
                        <% }) %>
                    <% } %>
                </select>
                <div id="progressGraphContainer" class="mt-6 bg-gray-900 p-4 rounded-lg shadow-lg" style="display:none;">
                    <canvas id="progressBarGraph" height="300"></canvas>
                </div>
            </div>

            <h2 class="text-xl font-bold mb-2">All Registered Students</h2>
            <div class="overflow-x-auto bg-gray-800 rounded">
                <table class="min-w-full table-auto divide-y divide-gray-700 text-sm">
                    <thead class="bg-gray-700">
                        <tr>
                            <th class="px-4 py-2 text-left">Name</th>
                            <th class="px-4 py-2 text-left">Email</th>
                            <th class="px-4 py-2 text-left">College</th>
                            <th class="px-4 py-2 text-left">Branch</th>
                            <th class="px-4 py-2 text-left">Year</th>
                            <th class="px-4 py-2 text-left">City</th>
                            <th class="px-4 py-2 text-left">State</th>
                            <th class="px-4 py-2 text-left">LinkedIn</th>
                            <th class="px-4 py-2 text-left">GitHub</th>
                            <th class="px-4 py-2 text-left">Messages</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-700">
                        <% if (students && students.length > 0) { %>
                            <% students.forEach(stud => { %>
                                <tr>
                                    <td class="px-4 py-2"><%= stud.fullName %></td>
                                    <td class="px-4 py-2"><%= stud.email %></td>
                                    <td class="px-4 py-2"><%= stud.collegeName %></td>
                                    <td class="px-4 py-2"><%= stud.branch %></td>
                                    <td class="px-4 py-2"><%= stud.year %></td>
                                    <td class="px-4 py-2"><%= stud.city %></td>
                                    <td class="px-4 py-2"><%= stud.state %></td>
                                    <td class="px-4 py-2">
                                        <% if (stud.linkedin) { %>
                                            <a href="<%= stud.linkedin %>" target="_blank" class="text-blue-400 hover:underline">LinkedIn</a>
                                        <% } %>
                                    </td>
                                    <td class="px-4 py-2">
                                        <% if (stud.github) { %>
                                            <a href="<%= stud.github %>" target="_blank" class="text-blue-400 hover:underline">GitHub</a>
                                        <% } %>
                                    </td>
                                    <td class="px-4 py-2">
                                        <a href="/student-mentorChat/<%= mentorId %>?studentId=<%= stud.id %>"
                                           class="px-3 py-1 bg-blue-600 hover:bg-blue-700 rounded text-white">View</a>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="10" class="px-4 py-4 text-center text-gray-400">No students found.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- College Fests Section -->
        <div id="festsSection" class="section hidden space-y-6">
            <h2 class="text-xl font-bold">College Fests</h2>
            <div class="flex space-x-4 mb-4">
                <input type="text" id="festSearch" placeholder="Search Tech Fest by name..." autocomplete="off" class="p-2 rounded bg-gray-700 border border-gray-600 w-64">
                <select id="festDropdown" class="p-2 rounded bg-gray-700 border border-gray-600">
                    <option value="">Select Fest</option>
                    <% fests.forEach(fest => { %>
                        <option value="<%= fest.festName %>"><%= fest.festName %></option>
                    <% }) %>
                </select>
            </div>
            <div id="festList" class="space-y-4">
                <% if (fests && fests.length > 0) { %>
                    <% fests.forEach(fest => { %>
                        <div class="fest-card bg-gray-800 p-4 rounded space-y-2" data-name="<%= (fest.festName || '').toLowerCase() %>" data-state="<%= (fest.state || '').toLowerCase() %>">
                            <img src="/<%= fest.logo && fest.logo !== 'uploads/default.jpg' ? fest.logo : 'uploads/default.jpg' %>" alt="Fest Logo" class="w-32 h-32 object-contain rounded mx-auto">
                            <h3 class="text-lg font-semibold text-center"><%= fest.festName %></h3>
                            <div class="space-y-1 text-sm">
                                <p><strong>College Name:</strong> <%= fest.collegeName %></p>
                                <p><strong>Affiliation:</strong> <%= fest.affiliation %></p>
                                <p><strong>Edition:</strong> <%= fest.edition %></p>
                                <p><strong>Start Date:</strong> <%= fest.startDate %></p>
                                <p><strong>End Date:</strong> <%= fest.endDate %></p>
                                <p><strong>Venue:</strong> <%= fest.venue %></p>
                                <p><strong>Pincode:</strong> <%= fest.pincode %></p>
                                <p><strong>Contact Person:</strong> <%= fest.contactPerson %></p>
                                <p><strong>Designation:</strong> <%= fest.designation %></p>
                                <p><strong>Email:</strong> <a href="mailto:<%= fest.email %>" class="text-blue-400 hover:underline"><%= fest.email %></a></p>
                                <p><strong>Phone:</strong> <a href="tel:<%= fest.phone %>" class="text-blue-400 hover:underline"><%= fest.phone %></a></p>
                                <p><strong>Website:</strong> <a href="<%= fest.website %>" target="_blank" class="text-blue-400 hover:underline"><%= fest.website %></a></p>
                                <p><strong>Registration Link:</strong> <a href="<%= fest.registrationLink %>" target="_blank" class="text-blue-400 hover:underline"><%= fest.registrationLink %></a></p>
                                <p><strong>Instagram:</strong> <a href="<%= fest.instagram %>" target="_blank" class="text-blue-400 hover:underline"><%= fest.instagram %></a></p>
                                <p><strong>Twitter:</strong> <a href="<%= fest.twitter %>" target="_blank" class="text-blue-400 hover:underline"><%= fest.twitter %></a></p>
                                <p><strong>Expected Participants:</strong> <%= fest.expectedParticipants %></p>
                                <p><strong>Scale:</strong> <%= fest.scale %></p>
                                <p><strong>Mode:</strong> <%= fest.mode %></p>
                                <p><strong>Description:</strong> <%= fest.description %></p>
                                <% if (fest.brochure) { %>
                                    <p><a href="/<%= fest.brochure %>" target="_blank" class="text-blue-400 hover:underline">View Brochure</a></p>
                                <% } %>
                            </div>
                            <form method="POST" action="/applyJudge" class="text-center mt-4">
                                <input type="hidden" name="mentorId" value="<%= mentorId %>">
                                <input type="hidden" name="festId" value="<%= fest.id %>">
                                <button type="submit" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 rounded text-white">Apply for Judging</button>
                            </form>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p class="text-gray-400">No college fests available at the moment.</p>
                <% } %>
            </div>
        </div>
        <!-- View Submitted Work Section -->
        <div class="mb-8">
            <h2 class="text-xl font-bold mb-2">View Submitted Work</h2>
            <div id="submittedWorkList" class="bg-gray-800 rounded p-4 overflow-x-auto">
                <em>Loading...</em>
            </div>
        </div>
    </div>


    <div class="flex flex-col items-center mt-8">
        <button onclick="window.location.href='/mentorDashboard?mentorId=<%= mentorId %>'" class="px-4 py-2 bg-gray-600 hover:bg-gray-700 rounded text-white font-semibold mb-2">Back to Dashboard</button>
        <form action="/logout" method="post">
            <button class="px-4 py-2 bg-gray-700 text-white rounded-md hover:bg-gray-800">Logout</button>
        </form>
    </div>

    <script>
            // Fetch and display AI predicted students
            fetch('/mentor/predict/<%= mentorId %>')
                .then(res => res.json())
                .then(data => {
                    const container = document.getElementById('aiPredictedStudents');
                    if (!data || !data.recommended_mentees || !Array.isArray(data.recommended_mentees) || !data.recommended_mentees.length) {
                        container.innerHTML = '<em>No predictions available.</em>';
                        return;
                    }
                    let html = '<table class="min-w-full divide-y divide-gray-700 text-sm"><thead><tr><th>Name</th><th>Email</th><th>Grades</th><th>Badges</th></tr></thead><tbody class="divide-y divide-gray-700">';
                    data.recommended_mentees.forEach(studId => {
                        // For demo, just show ID. In real, fetch details via AJAX or pass from backend.
                        html += `<tr><td>${studId}</td><td>-</td><td>-</td><td>-</td></tr>`;
                    });
                    html += '</tbody></table>';
                    container.innerHTML = html;
                })
                .catch(() => {
                    document.getElementById('aiPredictedStudents').innerHTML = '<em>Error loading predictions.</em>';
                });
        // Tab switching logic
        const tabs = document.querySelectorAll(".tab-btn");
        const sections = document.querySelectorAll(".section");
        tabs.forEach(tab => {
            tab.addEventListener("click", () => {
                tabs.forEach(btn => {
                    btn.classList.remove("bg-blue-600", "hover:bg-blue-700");
                    btn.classList.add("bg-gray-700", "hover:bg-gray-600");
                });
                sections.forEach(sec => sec.classList.add("hidden"));
                tab.classList.remove("bg-gray-700", "hover:bg-gray-600");
                tab.classList.add("bg-blue-600", "hover:bg-blue-700");
                document.getElementById(tab.dataset.target).classList.remove("hidden");
            });
        });

        // Assign Work Modal
        document.getElementById('assignWorkBtn').onclick = function() {
            document.getElementById('assignModal').classList.remove('hidden');
        };

        // Load resources
        fetch('/resources')
            .then(res => res.json())
            .then(data => {
                const list = document.getElementById('resourceList');
                if (!data.length) {
                    if (list) list.innerHTML = '<em>No resources uploaded yet.</em>';
                    return;
                }
                let html = '<table class="min-w-full divide-y divide-gray-700 text-sm"><thead><tr><th>Title</th><th>Description</th><th>Mentor</th><th>File</th><th>Uploaded</th></tr></thead><tbody class="divide-y divide-gray-700">';
                data.forEach(r => {
                    html += `<tr><td class="px-4 py-2">${r.title}</td><td class="px-4 py-2">${r.description||''}</td><td class="px-4 py-2">${r.mentorName||''}</td><td class="px-4 py-2"><a href="/${r.file_path}" target="_blank" class="text-blue-400 hover:underline">Download</a></td><td class="px-4 py-2">${new Date(r.uploaded_at).toLocaleString()}</td></tr>`;
                });
                html += '</tbody></table>';
                if (list) list.innerHTML = html;
            })
            .catch(() => {
                var resourceListEl = document.getElementById('resourceList');
                if (resourceListEl) resourceListEl.innerHTML = '<em>Error loading resources.</em>';
            });

        // Fest search filter
        const festSearch = document.getElementById('festSearch');
        const festDropdown = document.getElementById('festDropdown');
        festSearch && festSearch.addEventListener('input', function() {
            const val = this.value.trim().toLowerCase();
            document.querySelectorAll('.fest-card').forEach(card => {
                const name = card.getAttribute('data-name');
                card.style.display = name.includes(val) ? '' : 'none';
            });
            festDropdown.value = "";
        });

        // Progress Graph Logic
        const mentorId = '<%= mentorId %>';
        document.getElementById('progressStudentSelect').addEventListener('change', async function() {
            const studentId = this.value;
            const graphContainer = document.getElementById('progressGraphContainer');
            if (!studentId) {
                graphContainer.style.display = 'none';
                return;
            }
            graphContainer.style.display = 'block';
            // Fetch progress data
            const res = await fetch(`/api/mentor/studentProgress?mentorId=${mentorId}&studentId=${studentId}`);
            const data = await res.json();
            const graphData = data.graphData || [];
            // Prepare chart data
            const labels = graphData.map(d => d.week);
            const assignments = graphData.map(d => d.assignments);
            const quizzes = graphData.map(d => d.quizzes);
            const statusColors = graphData.map(d => d.status === 'Good' ? 'rgba(34,197,94,0.7)' : 'rgba(239,68,68,0.7)');
            // Destroy previous chart if exists
            if (window.progressChart) window.progressChart.destroy();
            const ctx = document.getElementById('progressBarGraph').getContext('2d');
            window.progressChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels,
                    datasets: [
                        {
                            label: 'Assignments Completed',
                            data: assignments,
                            backgroundColor: statusColors,
                        },
                        {
                            label: 'Quizzes Passed',
                            data: quizzes,
                            backgroundColor: 'rgba(59,130,246,0.7)',
                        }
                    ]
                },
                options: {
                    indexAxis: 'y',
                    scales: {
                        x: { beginAtZero: true },
                        y: { title: { display: true, text: 'Week Slot' } }
                    },
                    plugins: {
                        legend: { position: 'top' },
                        title: { display: true, text: 'Student Progress (Good/Bad by color)' }
                    }
                }
            });
        });
                // Fetch and display submitted assignments/resources by mentees
        function renderSubmittedWorkTable(data) {
            if (!data.length) return '<em>No submitted work found.</em>';
            let html = '<table class="min-w-full divide-y divide-gray-700 text-sm"><thead><tr><th class="px-4 py-2 text-left">Mentee</th><th class="px-4 py-2 text-left">Title</th><th class="px-4 py-2 text-left">Type</th><th class="px-4 py-2 text-left">File</th><th class="px-4 py-2 text-left">Uploaded</th><th class="px-4 py-2 text-left">Assign Badge</th></tr></thead><tbody class="divide-y divide-gray-700">';
            data.forEach(item => {
                const badgeBtnId = `badgeBtn_${item.type}_${item.id}`;
                html += `<tr><td class="px-4 py-2">${item.menteeName || ''} (${item.menteeEmail || ''})</td><td class="px-4 py-2">${item.title || ''}</td><td class="px-4 py-2">${item.type}</td><td class="px-4 py-2"><a href="/${item.file_path}" target="_blank" class="text-blue-400 hover:underline">Download</a></td><td class="px-4 py-2">${item.uploaded_at ? new Date(item.uploaded_at).toLocaleString() : ''}</td><td class="px-4 py-2"><button class="bg-yellow-500 hover:bg-yellow-600 text-black px-3 py-1 rounded assign-badge-btn" id="${badgeBtnId}" data-student-id="${item.menteeId || ''}" data-title="${item.title || ''}" data-type="${item.type}" data-assignment-id="${item.id}">Assign Badge</button><span id="badgeStatus_${item.type}_${item.id}" class="ml-2 text-green-400 text-xs"></span></td></tr>`;
            });
            html += '</tbody></table>';
            return html;
        }
        // Assign badge button logic
        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('assign-badge-btn')) {
                const btn = e.target;
                const studentId = btn.getAttribute('data-student-id');
                const title = btn.getAttribute('data-title');
                const type = btn.getAttribute('data-type');
                const assignmentId = btn.getAttribute('data-assignment-id');
                if (!studentId || !title) return;
                btn.disabled = true;
                fetch('/api/mentor/assignBadge', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ studentId, mentorId: '<%= mentorId %>', title, type, assignmentId })
                })
                .then(res => res.json())
                .then(data => {
                    document.getElementById(`badgeStatus_${type}_${assignmentId}`).textContent = data.success ? 'Badge assigned!' : (data.error || 'Error');
                    if (!data.success) btn.disabled = false;
                })
                .catch(() => {
                    document.getElementById(`badgeStatus_${type}_${assignmentId}`).textContent = 'Error';
                    btn.disabled = false;
                });
            }
        });

        function loadSubmittedWork() {
            fetch(`/api/mentor/submittedWork?mentorId=<%= mentorId %>`)
                .then(res => res.json())
                .then(data => {
                    var submittedWorkListEl = document.getElementById('submittedWorkList');
                    if (submittedWorkListEl) submittedWorkListEl.innerHTML = renderSubmittedWorkTable(data);
                })
                .catch(() => {
                    var submittedWorkListEl2 = document.getElementById('submittedWorkList');
                    if (submittedWorkListEl2) submittedWorkListEl2.innerHTML = '<em>Error loading submitted work.</em>';
                });
        }
        loadSubmittedWork();
    </script>
</body>
</html>