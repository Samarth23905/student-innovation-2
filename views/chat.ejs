<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Students Group Chat</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="/socket.io/socket.io.js"></script>
</head>
<body class="bg-gradient-to-br from-blue-100 via-gray-100 to-gray-200 min-h-screen flex items-center justify-center font-sans">
  <div class="chat-container w-full max-w-3xl bg-white rounded-xl shadow-lg p-6 flex flex-col h-[90vh]">
    
    <!-- Header -->
    <h2 class="text-center text-2xl font-bold text-violet-700 mb-4 border-b pb-3">Students Group Chat</h2>

    <!-- Messages -->
    <div class="messages flex-1 overflow-y-auto space-y-4 p-4 bg-gray-50 rounded-lg border">
      <% if (messages && messages.length > 0) { %>
        <% messages.slice().reverse().forEach(msg => { %>
          <% let safeCurrentUserId = (typeof currentUserId !== 'undefined' && currentUserId) ? currentUserId : 0; %>
          <div class="msg flex items-start gap-3">
            <span class="cursor-pointer" onclick="window.location.href='/studentChat/<%= msg.userId %>?currentUserId=<%= safeCurrentUserId %>'">
              <img src="/<%= msg.profile_pic || 'uploads/default.jpg' %>" 
                   alt="Profile" 
                   class="w-10 h-10 rounded-full object-cover border-2 border-blue-400" />
            </span>
            <div class="flex-1">
              <div class="flex items-center gap-2">
                <span class="font-semibold text-blue-700"><%= msg.fullName || msg.userName %></span>
                <span class="text-xs text-gray-500"><%= new Date(msg.createdAt).toLocaleString() %></span>
              </div>
              <p class="mt-1 bg-blue-50 text-gray-800 px-3 py-2 rounded-lg shadow-sm inline-block"><%= msg.originalMessage %></p>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-center text-gray-500">No messages yet.</p>
      <% } %>
    </div>

    <!-- Chat Form -->
    <% let safeCurrentUserId = (typeof currentUserId !== 'undefined' && currentUserId) ? currentUserId : 0;
       let safeCurrentUserName = (typeof currentUserName !== 'undefined' && currentUserName) ? currentUserName : 'Student'; %>
    <form id="chatForm" class="flex items-center gap-2 mt-4">
      <input type="hidden" id="userName" value="<%= safeCurrentUserName %>">
      <input type="hidden" id="userId" value="<%= safeCurrentUserId %>">
      <input type="text" id="messageInput" placeholder="Type your message..." required autocomplete="off" 
             class="flex-1 px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"/>
      <button type="submit" 
              class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">Send</button>
    </form>

    <!-- Back Button -->
    <button onclick="window.location.href='/studentDashboard'" 
            class="mt-3 w-full px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition">
      â¬… Back to Dashboard
    </button>
  </div>

  <!-- Socket Script -->
  <script>
    const socket = io();
    const chatForm = document.getElementById('chatForm');
    const messageInput = document.getElementById('messageInput');
    const messagesDiv = document.querySelector('.messages');
    const userId = document.getElementById('userId').value;
    const userName = document.getElementById('userName').value;

    chatForm.addEventListener('submit', function(e) {
      e.preventDefault();
      const msg = messageInput.value.trim();
      if (!msg) return;
      socket.emit('group-chat', { userId, userName, message: msg });
      messageInput.value = '';
    });

    socket.on('group-chat', function(data) {
      const msgDiv = document.createElement('div');
      msgDiv.className = 'msg flex items-start gap-3';
      msgDiv.innerHTML = `
        <span class="cursor-pointer" onclick="window.location.href='/studentChat/${data.userId}?currentUserId=${userId}'">
          <img src="/${data.profile_pic || 'uploads/default.jpg'}" 
               alt="Profile" 
               class="w-10 h-10 rounded-full object-cover border-2 border-blue-400" />
        </span>
        <div class="flex-1">
          <div class="flex items-center gap-2">
            <span class="font-semibold text-blue-700">${data.userName}</span>
            <span class="text-xs text-gray-500">${new Date().toLocaleString()}</span>
          </div>
          <p class="mt-1 bg-blue-50 text-gray-800 px-3 py-2 rounded-lg shadow-sm inline-block">${data.message}</p>
        </div>
      `;
      messagesDiv.appendChild(msgDiv);
      messagesDiv.scrollTop = messagesDiv.scrollHeight;
    });
  </script>
</body>
</html>
